extends inc/layout

block content

  .colors
    .cyan.definery
      .background.definery.on
      .background.iterate.off
      .background.navigate.off
      .background.product.off
    .bgcolor.definery
    .svg.star.all.star_definery.on
      include ../pub/svg/tween.svg
  .blend-multiply
    .video#video
      video(loop,muted,autoplay,poster="/img/poster.jpg")
        source(src="/vid/fog.mp4")
    .blend-screen
      .svg.all.star.star_definery.on
        include ../pub/svg/tween.svg

  .border.vert.top.definery
  .border.horiz.left.definery
  .border.vert.bottom.definery
  .border.horiz.right.definery

  .content.definery.on
    .inner
      //.top
        .nav.nav_definery.nav_to_product(data-dir="up",data-from="definery",data-to="product") the result
      .logo
        include ../pub/svg/logo.svg
      .pronounce /dəˈfīn(ə)rē/
      .define 1.  a digital product design and innovation company that transforms great ideas into amazing experiences that people want.
      .bottom
        .nav.nav_definery.nav_to_iterate(data-dir="down",data-from="definery",data-to="iterate")
          .arrow.down
            include ../pub/svg/arrow.svg

  .content.iterate.off
    .inner
      .top
        .nav.nav_iterate HOW WE WORK /
      .title Accelerate, iterate, advance
      .copy We walk the lines between thinking and making. It’s our mission to help you answer difficult questions, test solutions, and build better products, faster, smarter and with real users in mind.
      .bottom
        .nav.nav_iterate.nav_to_navigate(data-dir="down",data-from="iterate",data-to="navigate")
          .arrow.down
            include ../pub/svg/arrow.svg
          //.copy how we collaborate

  .content.navigate.off
    .inner
      .top
        .nav.nav_navigate.nav_to_iterate HOW WE COLLABORATE /
      .title Great products come from great teams
      .copy We pride ourselves in our expertise but know that the best solutions are the result of collaboration. This is why we form strong alliances with the people we work with so everyone is enabled to do their best work.
      .bottom
        .nav.nav_navigate.nav_to_product(data-dir="down",data-from="navigate",data-to="product")
          .arrow.down
            include ../pub/svg/arrow.svg
          //.copy the result

  .content.product.off
    .inner
      .top
        .nav.nav_product.nav_to_navigate THE RESULT /
      .title Winning products aren't just beautiful, they're a pleasure to use
      .copy We look at the full picture, championing user needs above all. Through our rapid design and prototyping process, getting to a proof of concept has never been easier.
      .bottom
        .nav.nav_product.contact_cta
          .copy get in touch

  .contact.off
    .color
    .close.contact_cta
      include ../pub/svg/close.svg

    .inner
      a.email(href="mailto:hello@definery.io") hello@definery.io
      .socials
        a.social.facebook(href=data.meta.social.facebook,target='_blank')
          include ../pub/svg/social/facebook.svg
        a.social.instagram(href=data.meta.social.instagram,target='_blank')
          include ../pub/svg/social/instagram.svg
        a.social.linkedin(href=data.meta.social.linkedin,target='_blank')
          include ../pub/svg/social/linkedin.svg



  .menu.on
    .option.contact_cta.option_contact.off(data-option='contact') contact us

  .dots
    .dot.dot_definery.on(data-sect="definery",data-num=0): .inner
    .dot.dot_iterate.off(data-sect="iterate",data-num=1): .inner
    .dot.dot_navigate.off(data-sect="navigate",data-num=2): .inner
    .dot.dot_product.off(data-sect="product",data-num=3): .inner
  script(type='text/javascript').
    Loader.load('/jst/detect.js', 'Detect', function() {
      Loader.load('/jst/index.js', 'Index');
    });
    document.body.addEventListener('touchmove', function(event) {
        event.preventDefault();
    });
