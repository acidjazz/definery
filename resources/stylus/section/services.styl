.section.services
  > .logo > svg > polygon
    fill gc(pink1)
  > .inner
    > .top
      animation cellInY 0.2s linear 0.2s both
      border-bottom 1px solid gc(pink1)
      > .label
        color gc(pink1)
    > .bottom
      > .servicelist
        margin-top 20px
        float left
        width 33%
        animation cellInY 0.2s linear 0.3s both
        &:nth-child(2)
          animation-delay 0.4s
        &:nth-child(3)
          animation-delay 0.5s
        > .label
          color gc(pink1)
          text-transform uppercase
          padding 40px 0 20px 0
          gf(copy1s)
        > .item
          padding 2px 10px 2px 0

