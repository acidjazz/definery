.section.work
  background-color gc(blue1)
  > .logo > svg > polygon
    fill gc(white1)
    //fill gc(blue3)
  > .inner
    background-color gc(blue1)
    width 100%
    height 100%
    top 0
    left 0
    margin 0
    overflow hidden
    > .tapspace
      background-color pink
      position absolute
      width 70vw
      height 60vh
      top 50%
      left 50%
      margin-top -30vh
      margin-left -35vw
      z-index 200

    > .copys
      z-index 200
      position absolute
      bottom 30px
      left 30px
      > .copy
        color gc(white1)
        onoff()
        > .ctitle
          animation inFromLeft 0.5s ease-in-out both 0.2s
          gf(h1)
          margin-bottom 8px
        > .cdescription
          animation inFromLeft 0.5s ease-in-out both 0.2s
          gf(copy1)
    > .gigs
        width 100%
        height 100%
        > .gig
          &.on
            opacity 1
            &.up
              animation fInFromBottom 0.5s ease-in-out both 0s
            &.down
              animation fInFromTop 0.5s ease-in-out both 0s
          &.off
            display none
          &.offing
            opacity 0
            &.up
              animation fOutToTop 0.5s ease-in-out both 0s
            &.down
              animation fOutToBottom 0.5s ease-in-out both 0s

          position absolute
          fullsize()
          width inherit
          height inherit
          background-size cover
          background-position 50% 50%
          > .image
            onoff()
            width inherit
            height inherit
            background-size cover
            background-position 50% 50%
            animation fadeIn 0.2s ease-in-out 0s
 
@media all and (min-width: 1px) and (max-width: 1000px)
  .section.work
    > .inner
      > .tapspace
        width 100vw
        margin-left -50vw
      > .copys
        bottom 80px
        left 30px
