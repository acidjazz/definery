.border
  position absolute
  background-color gc(teal1)
  &.vert
    height 12px
    width 100vw
  &.horiz
    width 12px
    height 100vh
  &.top
    top 0px
  &.bottom
    bottom 0px
  &.left
    left 0px
  &.right
    right 0px
.colors
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  > .cyan
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    //background-image url('/img/background.jpg')
    //background-size cover
    background-color rgba(gc(teal2))

.blend-multiply
  mix-blend-mode overlay
  > .video
    position absolute
    top 35% 
    left 35%
    width 20%
    height 20%
    background-color rgba(gc(white1), 0.9)
    > video
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      min-width 100%
      min-height 100%
      width auto
      height auto
  > .blend-screen
    mix-blend-mode screen
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(gc(white1), 1)
    text-align center
    gf(h1)
  .star
    position absolute
    width 45vw
    height 45vw
    top 50%
    margin-top -22.5vw
    right 0
    > svg
      width inherit
      height inherit
      > polygon
        fill gc(black1)
