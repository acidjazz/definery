
.border
  position absolute
  transition background-color 1s linear
  &.definery
    background-color gc(teal1)
  &.iterate
    background-color gc(bblue)
  &.product
    background-color gc(bpink)
  &.navigate
    background-color gc(bgreen)
  z-index 100
  &.vert
    height 12px
    width 100vw
  &.horiz
    width 12px
    height 100vh
  &.top
    top 0px
  &.bottom
    bottom 0px
  &.left
    top 0px
    left 0px
  &.right
    top 0px
    right 0px
.colors
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  > .cyan
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color gc(teal1)
    > .backgrounds
      position absolute
      width 100%
      height 100%
      > .background
        position absolute
        width 100%
        height 100%
        background-size cover
        z-index 0
        &.off
          display none
        &.on
          display block
        &.definery
          background-image url('/img/bg_definery.jpg')
        &.iterate
          background-image url('/img/bg_iterate.jpg')
        &.navigate
          background-image url('/img/bg_navigate.jpg')
        &.product
          background-image url('/img/bg_product.jpg')

        &.inFromBottom
          animation inFromBottom 0.75s ease-out both
          z-index 10
        &.inFromTop
          z-index 10
          animation inFromTop 0.75s ease-out both
        &.outToTop
          animation outToTop 1s ease-out both
          animation-delay 0.5s
        &.outToBottom
          animation outToBottom 1s ease-out both
          animation-delay 0.5s
  > .svg > svg > polygon
    transition fill 1s ease-in
  > .svg.definery > svg > polygon
    fill gc(teal1)
  > .svg.iterate > svg > polygon
    fill gc(blue1)
  > .svg.navigate > svg > polygon
    fill gc(teal3)
  > .svg.product > svg > polygon
    fill gc(pink1)

.blend-multiply
  mix-blend-mode multiply
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  > .video
    position absolute
    width 500px
    height 500px
    top 50%
    left 50%
    margin-top -250px
    > video
      height 500px
  > .blend-screen
    mix-blend-mode screen
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(gc(white1), 1)
    text-align center
    gf(h1)

.svg
  z-index 100
  position absolute
  width 500px
  height 500px
  top 50%
  left 50%
  margin-top -250px
  > svg
    width inherit
    height inherit
    > polygon
      fill gc(black1)
      &:nth-child(1)
        animation fadeIn 0.5s ease-in-out both
        animation-delay 1s
      &:nth-child(2)
        animation fadeIn 0.5s ease-in-out both
        animation-delay 1.5s
      &:nth-child(3)
        animation fadeIn 0.5s ease-in-out both
        animation-delay 2s
.content
  onoff()
  position absolute
  width 300px
  height 360px
  top 50%
  left 50%
  margin-top -150px
  margin-left -400px
  z-index 100
  > .inner
    position relative
    width 100%
    height 100%

    > .logo
      height 40px
      > svg
        height inherit
    > .title
      gf(h1)
      color gc(white1)
    > .logo, > .title
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.6s
    > .pronounce
      margin 20px 0
      color gc(black2)
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.7s
    > .copy
      margin 20px 0 20px 0
      color gc(white1)
    > .define
      color gc(white1)
      margin 0 0 20px 0
      &.second
        animation-delay 1.9s
    > .define, > .copy
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.8s
    > .bottom
      position absolute
      bottom 0
      animation fadeIn 0.5s ease-in-out both
      animation-delay 1.0s
      > .line
        width 64px
        height 4px
        background-color gc(white1)
      > .email
        margin 20px 0 0 0
        text-decoration none
        > input
          gf(copy1)
          border none
          background-color transparent
          color gc(teal1)
          outline none
          *:active
            outline none

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@keyframes inFromTop
  from
    opacity 0
    transform translate(0, -100px) scale(1.2)
  to
    opacity 1
    transform translate(0, 0) scale(1)


@keyframes inFromBottom
  from
    opacity 0
    transform translate(0, 100px) scale(1.2)
  to
    opacity 1
    transform translate(0, 0) scale(1)


@keyframes outToTop
  from
    opacity 1
    transform translate(0, 0)
  to
    opacity 0
    transform translate(0, -100px)


@keyframes outToBottom
  from
    opacity 1
    transform translate(0, 0)
  to
    opacity 0
    transform translate(0, 100px)


@media all and (min-width: 1px) and (max-width: 1000px)
  .svg
    margin-left -250px
    opacity 0.2
  .video
    margin-left -250px
  .content
    width 250px
    height 300px
    margin-left -125px
    margin-top -150px

