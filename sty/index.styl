
.border
  position absolute
  transition background-color 1s linear
  &.definery
    background-color gc(teal1)
  &.iterate
    background-color gc(bblue)
  &.product
    background-color gc(bpink)
  &.navigate
    background-color gc(bgreen)
  z-index 100
  &.vert
    height 12px
    width 100vw
  &.horiz
    width 12px
    height 100vh
  &.top
    top 0px
  &.bottom
    bottom 0px
  &.left
    top 0px
    left 0px
  &.right
    top 0px
    right 0px
.colors
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  > .cyan
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color gc(black1)
    > .background
      position absolute
      width 100%
      height 100%
      background-size cover
      z-index 0
      &.off
        display none
      &.on
        display block
      &.definery
        background-image url('/img/bg_definery.jpg')
      &.iterate
        background-image url('/img/bg_iterate.jpg')
      &.navigate
        background-image url('/img/bg_navigate.jpg')
      &.product
        background-image url('/img/bg_product.jpg')

      &.inFromBottom
        animation inFromBottom 1s ease-out both
        z-index 10
      &.inFromTop
        z-index 10
        animation inFromTop 1s ease-out both
      &.outToTop
        animation outToTop 1s ease-in both
      &.outToBottom
        animation outToBottom 1s ease-in both
  > .svg > svg > polygon
    transition fill 1s ease-in 0.1s
    transition-timing-function: cubic-bezier(.87,-.41,.19,1.44)
  > .svg.definery > svg > polygon
    fill gc(teal1)
  > .svg.iterate > svg > polygon
    fill gc(blue1)
  > .svg.navigate > svg > polygon
    fill gc(green1)
  > .svg.product > svg > polygon
    fill gc(pink1)

.blend-multiply
  z-index 100
  mix-blend-mode multiply
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  > .video
    position absolute
    width 500px
    height 500px
    top 50%
    left 50%
    margin-top -250px
    > video
      height 500px
  > .blend-screen
    mix-blend-mode screen
    top 0
    left 0
    width 100%
    height 100%
    background-color gc(white1)
    text-align center
    gf(h1)

.svg
  z-index 100
  position absolute
  width 500px
  height 500px
  top 50%
  left 50%
  margin-top -250px
  > svg
    width inherit
    height inherit
    > polygon
      fill gc(black1)
      &:nth-child(1)
        animation fadeIn 0.5s ease-in-out both
        animation-delay 0.5s
      &:nth-child(2)
        animation fadeIn 0.5s ease-in-out both
        animation-delay 1.0s
      &:nth-child(3)
        animation fadeIn 0.5s ease-in-out both
        animation-delay 1.5s

.content
  position absolute
  width 300px
  height 360px
  top 50%
  left 50%
  margin-top -150px
  margin-left -400px
  z-index 100
  onoff()
  &.cInFromBottom
    animation cInFromBottom 0.6s ease-in both 0.15s
  &.cInFromTop
    animation cInFromTop 0.6s ease-in both 0.15s
  &.cOutToTop
    animation cOutToTop 0.6s ease-in both
  &.cOutToBottom
    animation cOutToBottom 0.6s ease-in both

  > .inner
    position relative
    width 100%
    height 100%

    > .logo
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.1s
      height 40px
      > svg
        height inherit
    > .title
      gf(h1)
      color gc(white1)
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.1s
    > .pronounce
      margin 20px 0
      color gc(black2)
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.2s
    > .copy
      margin 20px 0 20px 0
      color gc(white1)
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.2s
    > .define
      color gc(white1)
      margin 0 0 20px 0
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.3s
      &.second
        animation-delay 0.4s
    > .top > .nav
      padding-bottom 20px
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.1s
    > .bottom > .nav, > .top > .nav
      cursor pointer
      gf(copy1b)
      user-select none
      touch-callout none
      -webkit-touch-callout none
      transition transform 0.5s ease-in
      -webkit-tap-highlight-color rgba(255, 255, 255, 0)
      tap-highlight-color rgba(255, 255, 255, 0)
      &:hover
        transform translate(10px, 0)
        transition transform 2s ease-out
      &.nav_definery
        color gc(teal1)
      &.nav_iterate
        color gc(bblue)
      &.nav_navigate
        color gc(bgreen)
      &.nav_product
        color gc(bpink)
    > .bottom
      position absolute
      bottom 0
      animation fadeIn 0.5s ease-in-out both
      animation-delay 0.5s
      > .line
        width 64px
        height 4px
        background-color gc(white1)
      > .nav
        padding 20px 0 0 0


@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@keyframes inFromTop
  from
    opacity 0
    transform translate(0, -100px) scale(1.1)
  to
    opacity 1
    transform translate(0, 0) scale(1)


@keyframes inFromBottom
  from
    opacity 0
    transform translate(0, 100px) scale(1.1)
  to
    opacity 1
    transform translate(0, 0) scale(1)


@keyframes outToTop
  from
    opacity 1
    transform translate(0, 0) scale(1)
  to
    opacity 0
    transform translate(0, -100px) scale(1.1)


@keyframes outToBottom
  from
    opacity 1
    transform translate(0, 0) scale(1)
  to
    opacity 0
    transform translate(0, 100px) scale(1.1)


@keyframes cInFromTop
  from
    transform translate(0, -350px)
  to
    transform translate(0, 0)


@keyframes cInFromBottom
  from
    transform translate(0, 350px)
  to
    transform translate(0, 0)


@keyframes cOutToTop
  from
    opacity 1
    transform translate(0, 0)
  to
    opacity 0
    transform translate(0, -350px)


@keyframes cOutToBottom
  from
    opacity 1
    transform translate(0, 0)
  to
    opacity 0
    transform translate(0, 350px)



@media all and (min-width: 1px) and (max-width: 1000px)
  .svg
    margin-left -250px
    opacity 0.2
  .video
    margin-left -250px
    display none
  .content
    width 250px
    height 400px
    margin-left -125px
    margin-top -200px
  .background
    animation none !important

  @keyframes inFromTop
    from
      opacity 0
      transform translate(0, 0) scale(1)
    to
      opacity 1
      transform translate(0, 0) scale(1)


  @keyframes inFromBottom
    from
      opacity 0
      transform translate(0, 0) scale(1)
    to
      opacity 1
      transform translate(0, 0) scale(1)


  @keyframes outToTop
    from
      opacity 1
      transform translate(0, 0) scale(1)
    to
      opacity 0
      transform translate(0, 0) scale(1)


  @keyframes outToBottom
    from
      opacity 1
      transform translate(0, 0) scale(1)
    to
      opacity 0
      transform translate(0, 0) scale(1)
