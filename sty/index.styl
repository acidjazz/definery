.border
  position absolute
  background-color gc(teal1)
  &.vert
    height 12px
    width 100vw
  &.horiz
    width 12px
    height 100vh
  &.top
    top 0px
  &.bottom
    bottom 0px
  &.left
    left 0px
  &.right
    right 0px
.video
  position absolute
  top 0
  bottom 0
  width 100%
  height 100%
  > video
    min-width 100%
    min-height 100%
    width auto
    height auto
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.blend
  mix-blend-mode color-dodge
  position absolute
  width 100vw
  height 100vh
  background-color gc(white1)
  text-align center
  gf(h1)
  > .left
    position absolute
    width 50vw
    height 50vw
    top 25vh
    left 0
  > .star
    position absolute
    width 50vw
    height 50vw
    top 50%
    margin-top -25vw
    right 0
    > svg
      width inherit
      height inherit
      > path
        fill transparent
