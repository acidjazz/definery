.outer
  height 100vh
  border-left 12px solid gc(teal1)
  border-right 12px solid gc(teal1)
  background rgba(gc(teal1), 0.25)
  > .border
    position absolute
    height 12px
    width 100vw
    left 0px
    background-color gc(teal1)
    &.top
      top 0px
    &.bottom
      bottom 0px
.video
  position absolute
  top 0
  bottom 0
  width 100%
  height 100%
  z-index -100
  > video
    min-width 100%
    min-height 100%
    width auto
    height auto
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

