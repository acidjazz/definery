.border
  position absolute
  background-color gc(teal1)
  &.vert
    height 12px
    width 100vw
  &.horiz
    width 12px
    height 100vh
  &.top
    top 0px
  &.bottom
    bottom 0px
  &.left
    left 0px
  &.right
    right 0px
.video
  position absolute
  top 0
  bottom 0
  width 100%
  height 100%
  > video
    min-width 100%
    min-height 100%
    width auto
    height auto
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.blend
  mix-blend-mode screen
  position absolute
  width 100vw
  height 100vh
  background-color rgba(gc(white1), 0.8)
  text-align center
  gf(h1)

.star
  position absolute
  width 600px
  height 600px
  top 50%
  left 50%
  margin-top -300px
  margin-left -300px
  > svg
    width inherit
    height inherit
    > path
      fill transparent
