.border
  position absolute
  background-color gc(teal1)
  &.vert
    height 12px
    width 100vw
  &.horiz
    width 12px
    height 100vh
  &.top
    top 0px
  &.bottom
    bottom 0px
  &.left
    left 0px
  &.right
    right 0px
.colors
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  > .cyan
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-image url('/img/background.jpg')
    background-size cover
  > .star
    > svg
      > polygon
        fill gc(teal1)

.blend-multiply
  mix-blend-mode multiply
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  > .video
    position absolute
    top 35%
    left 35%
    width 20%
    height 20%
    background-color rgba(gc(white1), 1)
    > video
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      min-width 100%
      min-height 100%
      width auto
      height auto
  > .blend-screen
    mix-blend-mode screen
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(gc(white1), 1)
    text-align center
    gf(h1)
.star
  position absolute
  width 40vw
  height 40vw
  top 50%
  margin-top -20vw
  right 5vw
  > svg
    width inherit
    height inherit
    padding 20px
    > polygon
      fill gc(black1)
      &:nth-child(1)
        animation starTop 0.5s ease-in-out both
        animation-delay 1s
      &:nth-child(2)
        animation starLeft 0.5s ease-in-out both
        animation-delay 1.25s
      &:nth-child(3)
        animation starRight 0.5s ease-in-out both
        animation-delay 1.5s

@keyframes starTop
  from
    //transform translate(-20px, -20px)
    opacity 0
  to
    transform translate(0, 0)
    opacity 1

@keyframes starLeft
  from
    //transform translate(0, 20px)
    opacity 0
  to
    transform translate(0, 0)
    opacity 1

@keyframes starRight
  from
    //transform translate(20px, -20px)
    opacity 0
  to
    transform translate(0, 0)
    opacity 1
